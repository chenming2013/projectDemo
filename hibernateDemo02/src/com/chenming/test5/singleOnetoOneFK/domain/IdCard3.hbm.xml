<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<!-- 该文件用来配置entity对象和数据库表的映射关系 -->
<!-- package指明要映射到数据库中的类在哪个包下 -->
<hibernate-mapping package="com.chenming.test5.singleOnetoOneFK.domain">
	<class name="com.chenming.test5.singleOnetoOneFK.domain.IdCard3" table="t_idcard3" lazy="false">
		<id name="id" column="id" type="int">
			<generator class="native"></generator>
		</id>
		
		<!-- 对entity中其它属性进行映射 -->
		<property name="cardNo" type="string" column="card_no"></property>
	</class>
</hibernate-mapping>