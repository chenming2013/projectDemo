package com.chenming.encode;

import java.util.Base64;
import java.util.Base64.Encoder;

import org.junit.Test;

/**
 * 测试Base64编码
 * @author 陈明
 * @date 2018年12月22日
 */
public class TestBase64Encode {

	@Test
	public void test1() {
		Encoder encoder = Base64.getEncoder();
		byte[] encode = encoder.encode("一".getBytes());
		for(byte bt:encode) {
			System.out.print(bt+" ");	//[53, 76, 105, 65]
		}
		
		System.out.println(encoder.encodeToString("一".getBytes()));		//5LiA	=> 	57-11-34-0
									
	}
	
	@Test
	public void test2() {
		int codePoint = '一';
		System.out.println(codePoint);	//19968
		
		String binaryString = Integer.toBinaryString(codePoint);
		System.out.println(binaryString);	//01001110-00000000(4E00)
		
		byte[] bytes = "一".getBytes();	//[-28, -72, -128]
		 
		//0100 1110-00 000000(4E00的二进制)
		//1110xxxx	10xxxxxx	10xxxxxx
		//11100100	10111000	10000000
		
	}
	
}
