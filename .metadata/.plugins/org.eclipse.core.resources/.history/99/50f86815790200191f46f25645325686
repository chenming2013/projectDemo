package basic.basic_06_2_aop_adviceBaseSchema.aop;

/**
 * 后置异常通知实现定义类
 * @author 陈明
 * @date 2018年12月18日
 */
public class HelloWorldAfterThrowingAspect {

	public void afterThrowingAdvice1() {
		System.out.println("1.HelloWorldAfterThrowingAspect...afterThrowingAdvice1()...");
	}
	
	public void afterThrowingAdvice2(Integer num) {
		System.out.println("2.HelloWorldAfterThrowingAspect...afterThrowingAdvice2(Integer num)...,num:"+num);
	}
	
	public void afterThrowingAdvice3(Integer num,ArithmeticException arithException) {
		System.out.println("3.HelloWorldAfterThrowingAspect...afterThrowingAdvice3(Integer num,ArithmeticException arithException)...,num:"+num+",arithException:"+arithException);
	}
	
	public String afterThrowingAdvice4(Integer num) {
		System.out.println("2.HelloWorldAfterThrowingAspect...afterThrowingAdvice2(Integer num)...,num:"+num);
	}
}
